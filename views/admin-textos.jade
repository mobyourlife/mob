extends layout

block content
    //- Jumbotron
    div.jumbotron.jumbotron-mob
        div.container
            h1 Administração
            p Administre os sites de clientes.
    
    div.container
        div.col-sm-10.col-sm-offset-1
            div.row
                div.col-sm-1
                    img(src=customer.facebook.picture, alt=customer.facebook.name)
                div.col-sm-8
                    h4
                        strong #{customer.facebook.name}
                div.col-sm-3.space-vertical.space-right
                    div.row
                        span.pull-right
                            a.btn.btn-primary(href='http://' + customer.id + '.mobyourlife.com.br', target='_blank')
                                i.fa.fa-external-link.jump-5
                                | Visualizar
            hr
            div.row
                ul.nav.nav-tabs
                    li
                        a(href='/admin/' + customer.id) Visão Geral
                    li.active
                        a(href='/admin/' + customer.id + '/textos') Textos
                    li
                        a(href='/admin/' + customer.id + '/avancado') Avançado
            div.row
                h3 Textos
                p Crie e modifique páginas de texto para este site.
                if textpages.length != 0
                    h4 Modifique uma página existente:
                    ul
                        each p in textpages
                            li
                                a(href='/admin/' + customer.id + '/textos/editar/' + p._id)
                                    | #{p.title}
                    hr
                p
                    a.btn.btn-primary(href='/admin/' + customer.id + '/textos/nova')
                        | Criar nova página