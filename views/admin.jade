extends layout

block content
    //- Jumbotron
    div.jumbotron.jumbotron-mob
        div.container
            h1 Administração
            p Administre os sites de clientes.
    
    each p in customers
        div.container
            div.col-sm-10.col-sm-offset-1
                div.well
                    div.row
                        div.hidden-xs.col-sm-2.text-center
                            img(src=p.facebook.picture, alt=p.facebook.name)
                        div.col-xs-12.col-sm-6
                            h4
                                strong #{p.facebook.name}
                            p
                                strong Criado:
                                |  #{moment(p.creation.time).fromNow()}
                            p.visible-xs
                                a.btn.btn-info.jump-5(href='http://' + p._id + '.mobyourlife.com.br', target='_blank')
                                    span.fa.fa-external-link.jump-5
                                    | Visualizar site
                                a.btn.btn-primary(href='/admin/' + p._id)
                                    span.fa.fa-cog.jump-5
                                    | Administrar
                        div.hidden-xs.col-sm-4.space-vertical.space-right
                            div.row
                                a.btn.btn-info.pull-right(href='http://' + p._id + '.mobyourlife.com.br', target='_blank')
                                    span.fa.fa-external-link.jump-5
                                    | Visualizar site
                            div.row
                                a.btn.btn-primary.pull-right(href='/admin/' + p._id)
                                    span.fa.fa-cog.jump-5
                                    | Administrar