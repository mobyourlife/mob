extends layout

block content
    //- Jumbotron
    div.jumbotron.jumbotron-mob
        div.container
            h1 Contato
            p Fale direto com a nossa equipe em caso de dúvidas, críticas ou sugestões!
            p
                a.btn.btn-xl.btn-jumbo(href='/login', data-role='button')
                    span Crie seu novo site agora
                    span.jump-5
                    span.fa.fa-arrow-right

    div.container
        div.row
            div.col-md-8
                div.well.well-sm
                    form#mail-form.form-horizontal(action='/enviar-email', method='post')
                        fieldset
                            legend.text-center Fale Conosco
                        
                        div.form-group
                            label.col-md-3.control-label(for='name') Nome
                            div.col-md-9
                                input#name.form-control(name='name', type='text', placeholder='Seu nome')
                        
                        div.form-group
                            label.col-md-3.control-label(for='email') E-mail
                            div.col-md-9
                                input#email.form-control(name='email', type='text', placeholder='Seu endereço de e-mail')
                        
                        div.form-group
                            label.col-md-3.control-label(for='mensagem') Mensagem
                            div.col-md-9
                                textarea#message.form-control(placeholder='Digite a sua mensagem aqui', rows=5)
                        
                        div.form-group
                            div.col-md-12.text-right
                                button.btn.btn-info.btn-lg(type='submit') Enviar
            
            div.col-md-4
                form
                    legend
                        span
                            i.glyphicon.glyphicon-globe.jump-5
                            | Nossa localização
                    address
                        strong F&gt;MOB STUDIO
                        br
                        | Rua Luiz Dalincourt 325, Bosque
                        br
                        | Campinas, SP
                        br
                        abbr(title='Telefone comercial') F:
                        |  (19) 3032-1279
                    address
                        strong Suporte Técnico: 
                        a(href='mailto:suporte@mobyourlife.com.br') suporte@mobyourlife.com.br