div.navbar.navbar-mob.navbar-fixed-top(role='navigation')
    div.container
        div.navbar-header
            button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
                span.icon-bar
                span.icon-bar
                span.icon-bar
            a.navbar-brand(href='/')
                if fanpage
                    span
                        if fanpage.facebook.cdn
                            img.icon(src=fanpage.facebook.cdn, alt=fanpage.facebook.name)
                        else
                            img.icon(src=fanpage.facebook.picture, alt=fanpage.facebook.name)
                    span
                        | #{fanpage.facebook.name}
                else
                    img(src='/img/logo.png', alt='Mob Your Life')