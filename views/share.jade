doctype html
html
    head
        link(rel='stylesheet', href='/css/bootstrap.min.css')
        script(src='/js/facebook.sdk.js')
        script.
            function fbshare(link) {
                FB.ui({
                    method: 'share',
                    href: link,
                }, function(response){});
            }
body(style='background-color: #f4f4f4;')

    div.pull-right
        a.btn.btn-primary.btn-sm(href='#', onclick='fbshare("' + link + '"); return false;', style='margin-right: 10px;')
            i.glyphicon.glyphicon-share(style='margin-right: 5px;')
            span Compartilhar
        a.btn.btn-info.btn-sm(href=link, target='_blank')
            i.glyphicon.glyphicon-new-window(style='margin-right: 5px;')
            span Mais detalhes