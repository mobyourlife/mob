extends layout

block content
    //- Jumbotron
    div.jumbotron
        div.container
            h1 Sobre
    
    div.container.space-rows
        if hotInfo && hotInfo.length != 0
            div.row
                each item in hotInfo
                    div.text-center(class=hotInfoClass)
                        i.fa.fa-4x.text-primary(class=item.icon)
                        p
                            span
                                | #{item.label}:
                            br
                            span.text-primary
                                strong #{item.value}
        
        ol.breadcrumb
            li.text-primary
                strong #{fanpage.facebook.name}
            li.text-info #{fanpage.facebook.category}
            each c in fanpage.facebook.category_list
                li #{c.name}
        
        div(style='text-indent: 4em; text-align:justify;')
            p #{fanpage.facebook.about}
            p #{fanpage.facebook.description}
        
        hr
        
        each i in info
            if i.value
                div.row
                    div.col-sm-3
                        p.pull-right
                            strong #{i.key}:
                    div.col-sm-9
                        | #{i.value}
                        if i.list
                            ul
                            each l in i.list
                                li #{l.name}